<?xml version="1.0" encoding="UTF-8"?>

<!-- Importación de componentes JavaFX necesarios -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Vista principal del módulo de gestión de pedidos -->
<BorderPane maxHeight="1.7976931348623157E308" 
            maxWidth="1.7976931348623157E308" 
            minHeight="0.0" 
            minWidth="0.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teamcoders.vista.fx.pedidos.PedidosMenuController">

   <!-- Cabecera con título de la sección -->
   <top>
      <Label   text="Gestion de Pedidos" 
               textAlignment="CENTER" 
               BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
   </top>

   <!-- Cuerpo central con botones de navegación -->
   <center>
      <VBox alignment="CENTER" 
            spacing="30.0" 
            style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-background-radius: 10;" 
            BorderPane.alignment="CENTER">
         <children>

            <!-- Botón para ir al formulario de alta de pedidos -->
            <Button  fx:id="btnAnadirPedido" 
                     mnemonicParsing="false" 
                     onAction="#anadirPedido" 
                     text="Añadir Pedido" />

            <!-- Botón para mostrar todos los pedidos registrados -->
            <Button  fx:id="btnMostrarPedido" 
                     mnemonicParsing="false" 
                     onAction="#mostrarPedidos" 
                     text="Mostrar los Pedidos" />
            
            <!-- Botón para eliminar un pedido pendiente de enviar -->
            <Button  fx:id="btnEliminarPedido" 
                     mnemonicParsing="false" 
                     onAction="#eliminarPedido" 
                     text="Eliminar pedido" />

            <!-- Botón para regresar a la pantalla de inicio -->
            <Button  fx:id="btnVolverInicio" 
                     mnemonicParsing="false" 
                     onAction="#volverInicio" 
                     text="Volver" />
         </children>
      </VBox>
   </center>
</BorderPane>
