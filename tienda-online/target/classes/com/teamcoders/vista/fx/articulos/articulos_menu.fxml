<?xml version="1.0" encoding="UTF-8"?>

<!-- Importaciones necesarias para la estructura visual -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Vista del menú principal del módulo de gestión de artículos -->
<BorderPane maxHeight="1.7976931348623157E308" 
            maxWidth="1.7976931348623157E308" 
            minHeight="0.0" 
            minWidth="0.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teamcoders.vista.fx.articulos.ArticulosMenuController">

   <!-- Zona superior con el título del módulo -->
   <top>
      <Label   text=" Gestion de Articulos" 
               textAlignment="CENTER" 
               BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
   </top>

   <!-- Zona central con los botones de acción -->
   <center>
      <VBox alignment="CENTER" 
            spacing="30.0" 
            style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-background-radius: 10;" 
            BorderPane.alignment="CENTER">
         <children>

            <!-- Botón para ir al formulario de añadir artículos -->
            <Button  fx:id="btnAnadirArticulo" 
                     mnemonicParsing="false" 
                     onAction="#anadirArticulo" 
                     text="Añadir Articulo" />

            <!-- Botón para mostrar los artículos existentes -->
            <Button  fx:id="btnMostrarArticulos" 
                     mnemonicParsing="false" 
                     onAction="#mostrarArticulos" 
                     text="Mostrar los Articulos" />

            <!-- Botón para volver a la vista inicial -->         
            <Button  fx:id="btnVolverInicio" 
                     mnemonicParsing="false" 
                     onAction="#volverInicio" 
                     text="Volver" />
         </children>
      </VBox>
   </center>
</BorderPane>
