<?xml version="1.0" encoding="UTF-8"?>

<!-- Importaciones necesarias para construir la interfaz -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<!-- Vista para añadir un nuevo cliente, usando BorderPane como contenedor principal -->
<BorderPane maxHeight="1.7976931348623157E308" 
            maxWidth="1.7976931348623157E308" 
            minHeight="0.0" 
            minWidth="0.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teamcoders.vista.fx.clientes.ClientesAnadirController">
   <!-- Encabezado de la pantalla -->
   <top>
      <Label   alignment="CENTER" 
               maxWidth="1.7976931348623157E308" 
               text="Añadir un nuevo cliente" 
               textAlignment="CENTER" 
               BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>

   <!-- Cuerpo central con el formulario de entrada (nombre, NIF, domicilio, email, tipo y cuota) -->
   <center>
      <GridPane   alignment="CENTER" 
                  hgap="10.0" 
                  prefHeight="270.0" 
                  prefWidth="314.0" 
                  vgap="10.0" 
                  BorderPane.alignment="CENTER">
         <!-- Definición de columnas y filas -->
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
               <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>

         <!-- Campos del formulario -->
         <children>
            <Label fx:id="lblNombre" text="Nombre:" />
            <TextField fx:id="txtNombre" promptText="Introduce el nombre" GridPane.columnIndex="1" />
            
            <Label fx:id="lblNif" text="NIF:" GridPane.rowIndex="1" />
            <TextField fx:id="txtNif" promptText="Introduce el NIF" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label fx:id="lblDomicilio" text="Domicilio:" GridPane.rowIndex="2" />
            <TextField fx:id="txtDomicilio" promptText="Introduce el domicilio" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <TextField fx:id="txtEmail" promptText="Introduce el email" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="lblEmail" text="Email:" GridPane.rowIndex="3" />

            <Label fx:id="txtTipoCliente" text="Tipo de Cliente:" GridPane.rowIndex="4" />
            <HBox fx:id="boxTipoCliente" 
                  alignment="CENTER_LEFT" 
                  prefHeight="100.0" 
                  prefWidth="200.0" 
                  GridPane.columnIndex="1" 
                  GridPane.rowIndex="4">
               <children>
                  <RadioButton fx:id="rbtEstandar" mnemonicParsing="false" text="Estándar" />
                  <RadioButton fx:id="rbtPremium" mnemonicParsing="false" text="Premium" />
               </children>
            </HBox>

            <Label fx:id="lblCuota" text="Cuota Anual:" GridPane.rowIndex="5" />
            <TextField fx:id="txtCuota" promptText="Introduce la cuota" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </center>

   <!-- Pie con botones de acción -->
   <bottom>
      <HBox alignment="CENTER" 
            prefHeight="100.0" 
            prefWidth="200.0" 
            spacing="30.0" 
            style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-background-radius: 10;" 
            BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnGuardarCliente" mnemonicParsing="false" onAction="#handleGuardar" text="Guardar" />
            <Button fx:id="btnVolverCliente" mnemonicParsing="false" onAction="#handleVolver" text="Volver" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
