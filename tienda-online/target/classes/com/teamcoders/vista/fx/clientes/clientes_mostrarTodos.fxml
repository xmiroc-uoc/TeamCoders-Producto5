<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.teamcoders.vista.fx.clientes.ClientesMostrarTodosController">
    <top>
        <Label text="Listado de Clientes" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>
    <center>
        <TableView fx:id="tablaClientes" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn text="Nombre" fx:id="colNombre" />
                <TableColumn text="Domicilio" fx:id="colDomicilio" />
                <TableColumn text="DNI" fx:id="colNif" />
                <TableColumn text="Email" fx:id="colEmail" />
                <TableColumn text="Tipo" fx:id="colTipo" />
                <TableColumn text="Cuota" fx:id="colCuota" />
            </columns>
        </TableView>
    </center>
</BorderPane>
