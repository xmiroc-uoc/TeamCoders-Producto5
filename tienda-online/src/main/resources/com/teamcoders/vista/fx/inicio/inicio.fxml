<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamcoders.vista.fx.inicio.InicioController">
   <top>
      <!-- Título -->
       <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="¡Bienvenido a la Tienda Online!" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <!-- Botones -->
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-background-radius: 10;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnGestionClientes" mnemonicParsing="false" onAction="#irAGestionClientes" text="Gestión de Clientes" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnGestioinArticulos" mnemonicParsing="false" onAction="#irAGestionArticulos" text="Gestión de Artículos" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnGestionPedidos" mnemonicParsing="false" onAction="#onGestionPedidos" text="Gestión de Pedidos" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
