<?xml version="1.0" encoding="UTF-8"?>

<!-- Importación de componentes necesarios para la construcción visual -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<!-- Vista del formulario para crear un nuevo pedido -->
<BorderPane maxHeight="1.7976931348623157E308" 
            maxWidth="1.7976931348623157E308" 
            minHeight="0.0" 
            minWidth="0.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teamcoders.vista.fx.pedidos.PedidosEliminarController">
   
   <!-- Título superior -->
   <top>
      <Label   alignment="CENTER" 
               maxWidth="1.7976931348623157E308" 
               text="Eliminar un nuevo pedido" 
               textAlignment="CENTER" 
               BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>

   <!-- Zona central con el formulario en un GridPane -->
   <center>
      <GridPane   alignment="CENTER" 
                  hgap="10.0" 
                  prefHeight="270.0" 
                  prefWidth="314.0" 
                  vgap="10.0" 
                  BorderPane.alignment="CENTER">
         
         <!-- Columnas: etiqueta a la izquierda, campo a la derecha -->
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
               <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
         </columnConstraints>

         <!-- Filas para los 3 campos del formulario -->
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>

         <!-- Campos del formulario -->
         <children>
            <Label fx:id="lblNumeroPedido" text="Numero Pedido:" />
            <TextField fx:id="txtNumeroPedido" promptText="Introduce el numero pedido a eliminar" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </center>

   <!-- Zona inferior con botones de acción -->
   <bottom>
      <HBox alignment="CENTER" 
            prefHeight="100.0" 
            prefWidth="200.0" 
            spacing="30.0" 
            style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-background-radius: 10;" 
            BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnEliminarPedido" mnemonicParsing="false" onAction="#handleEliminar" text="Eliminar" />
            <Button fx:id="btnVolverPedido" mnemonicParsing="false" onAction="#handleVolver" text="Volver" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
