<?xml version="1.0" encoding="UTF-8"?>

<!-- Importación de clases necesarias para la interfaz JavaFX -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Vista JavaFX para mostrar el listado de clientes -->
<BorderPane maxHeight="1.7976931348623157E308" 
            maxWidth="1.7976931348623157E308" 
            minHeight="0.0" 
            minWidth="0.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teamcoders.vista.fx.clientes.ClientesMostrarController">

   <!-- Encabezado superior con título y botones de filtrado -->
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <!-- Título principal -->
            <Label   alignment="CENTER" 
                     text="Listado de Clientes" 
                     VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>

            <!-- Botonera superior: filtros por tipo de cliente + volver -->
            <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnTodos" mnemonicParsing="false" onAction="#mostrarTodos" text="Mostrar Todos" />
                  <Button fx:id="btnEstandar" mnemonicParsing="false" onAction="#mostrarEstandar" text="Mostrar Clientes Estándar" />
                  <Button fx:id="btnPremium" mnemonicParsing="false" onAction="#mostrarPremium" text="Mostrar Clientes Premium" />
                  <Separator maxWidth="1.7976931348623157E308" minWidth="30.0" orientation="VERTICAL" />
                  <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver" text="Volver" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>

         <!-- Margen general del bloque superior -->
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>

   <!-- Cuerpo principal: tabla con los clientes -->
   <center>
      <TableView fx:id="tablaClientes" prefHeight="400" prefWidth="600">
         <columns>
               <TableColumn fx:id="colNombre" text="Nombre" />
               <TableColumn fx:id="colDomicilio" text="Domicilio" />
               <TableColumn fx:id="colNif" text="DNI" />
               <TableColumn fx:id="colEmail" text="Email" />
               <TableColumn fx:id="colTipo" text="Tipo" />
               <TableColumn fx:id="colCuota" text="Cuota" />
         </columns>
      </TableView>
   </center>
</BorderPane>
