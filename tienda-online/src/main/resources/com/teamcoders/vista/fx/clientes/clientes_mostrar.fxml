<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.teamcoders.vista.fx.clientes.ClientesMostrarController">
    <center>
        <TableView fx:id="tablaClientes" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" />
                <TableColumn fx:id="colDomicilio" text="Domicilio" />
                <TableColumn fx:id="colNif" text="DNI" />
                <TableColumn fx:id="colEmail" text="Email" />
                <TableColumn fx:id="colTipo" text="Tipo" />
                <TableColumn fx:id="colCuota" text="Cuota" />
            </columns>
        </TableView>
    </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 18px; -fx-padding: 10;" text="Listado de Clientes" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnTodos" mnemonicParsing="false" onAction="#mostrarTodos" text="Mostrar Todos" />
                  <Button fx:id="btnEstandar" mnemonicParsing="false" onAction="#mostrarEstandar" text="Mostrar Clientes EstÃ¡ndar" />
                  <Button fx:id="btnPremium" mnemonicParsing="false" onAction="#mostrarPremium" text="Mostrar Clientes Premium" />
                  <Separator minWidth="30.0" orientation="VERTICAL" />
                  <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver" text="Volver" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
